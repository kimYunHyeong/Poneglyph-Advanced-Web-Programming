extends base.pug

block content
    h4 Change Title of card
    form(method="POST")
        input(name="title",placeholder="Card Title", value=card.title, required)
        input(placeholder="Description",required, type="text" name="description",minlength=20, value=card.description)
        input(placeholder="Hash tags, separated by comma",required, type="text" name="hashtags",value=card.hashTags.join())
        input(value="Save",type="submit")
