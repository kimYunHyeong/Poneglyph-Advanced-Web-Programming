extends base.pug

block content
    h4 Upload Card
    if errorMessage
        span= errorMessage
    form(method="POST")
        input(placeholder="Title",required, type="text" name="title", maxlength=80)
        input(placeholder="Description",required, type="text" name="description",minlength=20)
        input(placeholder="Hash tags, separated by comma",required, type="text" name="hashTags")
        input(type="submit" value="Upload Cards")