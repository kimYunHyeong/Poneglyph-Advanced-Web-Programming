extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="user ID",name="userID",type="text",required)
        input(placeholder="password",name="password",type="password",required)
        input(placeholder="check password",name="checkPassword",type="password",required)
        input(placeholder="e-mail",name="email",type="text",required)
        input(placeholder="nick name",name="nickName",type="text",required)
        input(type="submit", value="Join")
    hr
    div
        span Already have an account? 
        a(href="/login") Log in now &rarr;